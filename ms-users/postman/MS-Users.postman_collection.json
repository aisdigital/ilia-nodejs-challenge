{
	"info": {
		"_postman_id": "ms-users-api",
		"name": "MS-Users API",
		"description": "Collection for testing Users Microservice endpoints.\n\n## Getting Started\n1. Run 'Register New User' to create a user and get JWT token\n2. The token is automatically saved to environment variables\n3. Use MS-Wallet collection to test wallet operations\n\n## Authentication\nJWT tokens are valid for 24 hours. Use Login endpoint to refresh.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"exec": [
					"// Generate unique email for registration tests",
					"if (!pm.environment.get('test_email')) {",
					"    const timestamp = Date.now();",
					"    pm.environment.set('test_email', `user${timestamp}@example.com`);",
					"}"
				],
				"type": "text/javascript"
			}
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register New User",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Generate unique email for this registration",
									"const timestamp = Date.now();",
									"pm.environment.set('test_email', `user${timestamp}@example.com`);"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Response has token and user\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('token');",
									"    pm.expect(jsonData).to.have.property('user');",
									"    pm.expect(jsonData.user).to.have.property('id');",
									"    pm.expect(jsonData.user).to.have.property('email');",
									"    pm.expect(jsonData.user).to.not.have.property('password');",
									"    ",
									"    // Save token and user_id for subsequent requests (both services)",
									"    pm.environment.set('jwt_token', jsonData.token);",
									"    pm.environment.set('user_id', jsonData.user.id);",
									"    pm.environment.set('user_email', jsonData.user.email);",
									"    ",
									"    console.log('✅ JWT token saved to environment');",
									"    console.log('✅ User ID:', jsonData.user.id);",
									"    console.log('✅ You can now use MS-Wallet collection');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"securepass123\",\n  \"name\": \"Test User\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
