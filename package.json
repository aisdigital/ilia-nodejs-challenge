{
  "name": "ilia-microservices",
  "version": "1.0.0",
  "description": "ILIA Node.js Challenge - Monorepo",
  "private": true,
  "scripts": {
    "build:users": "nest build users-service",
    "start:dev:users": "nest start users-service --watch",
