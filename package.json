{
  "name": "ilia-microservices",
  "version": "1.0.0",
  "description": "ILIA Node.js Challenge - Monorepo",
  "private": true,
  "engines": {
    "node": "20.19.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build:wallet": "swc apps/wallet-service -d dist/apps --copy-files && cp -r proto dist/apps/",
    "start:dev:wallet": "nest start wallet-service --watch",
    "start:prod:wallet": "node dist/apps/wallet-service/src/main.js",
    "test:wallet": "jest --config apps/wallet-service/test/jest.config.js",
    "test:wallet:unit": "jest --config apps/wallet-service/test/unit/jest.config.js",
    "test:wallet:integration": "jest --config apps/wallet-service/test/integration/jest.config.js",
    "test:wallet:cov": "npx jest apps/wallet-service/test/unit/ --config apps/wallet-service/test/jest.config.js --coverage",
    "build:users": "swc apps/users-service -d dist/apps --copy-files && cp -r proto dist/apps/ 2>/dev/null || true",
    "start:dev:users": "nest start users-service --watch",
    "start:prod:users": "node dist/apps/users-service/src/main.js",
    "test:users": "jest --config apps/users-service/test/jest.config.js",
    "test:users:unit": "jest --config apps/users-service/test/unit/jest.config.js",
    "test:users:integration": "jest --config apps/users-service/test/integration/jest.config.js",
    "test:users:cov": "jest --config apps/users-service/test/unit/jest.config.js --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.0",
    "@grpc/grpc-js": "^1.9.14",
    "@grpc/proto-loader": "^0.7.10",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.17",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.30",
    "@types/supertest": "^2.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/bcrypt": "^5.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.62",
    "eslint": "^8.50.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "prettier": "^3.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0"
  }
}
